│ ├── index.css # Global styles and dark mode
│ ├── main.jsx # Entry point
│ |
│ ├── ThemeToggle.jsx
│ └── ChatWidget.jsx
├── index.html
├── package.json
├── tailwind.config.js
├── vite.config.js
└── README.md

